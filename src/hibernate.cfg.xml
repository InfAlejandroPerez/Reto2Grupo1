<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/euskalmet</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="objetos/Municipio.hbm.xml"/>
        <mapping resource="objetos/CalidadAireHorario.hbm.xml"/>
        <mapping resource="objetos/Users.hbm.xml"/>
        <mapping resource="objetos/CalidadAireDiario.hbm.xml"/>
        <mapping resource="objetos/CalidadAireIndice.hbm.xml"/>
        <mapping resource="objetos/EspaciosNaturales.hbm.xml"/>
        <mapping resource="objetos/Estacion.hbm.xml"/>
        <mapping resource="objetos/Gallery.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
